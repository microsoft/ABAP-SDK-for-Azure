{
  "global": {
    "files": "/src/**/*.*",
    "skipGeneratedGatewayClasses": true,
    "skipGeneratedPersistentClasses": true,
    "skipGeneratedFunctionGroups": true
  },
  "dependencies": [
    {
      "url": "https://github.com/abaplint/deps",
      "folder": "/deps",
      "files": "/src/**/*.*"
    }
  ],
  "syntax": {
    "version": "v753",
    "errorNamespace": "^(Z|Y)",
    "globalConstants": [],
    "globalMacros": []
  },
  "rules": {
    "call_transaction_authority_check": true,
    "cyclomatic_complexity": false,
    "function_module_recommendations": false,
    "identical_contents": false,
    "method_overwrites_builtin": true,
    "align_parameters": false,
    "cds_comment_style": true,
    "cds_legacy_view": true,
    "cds_parser_error": true,
    "change_if_to_case": false,
    "classic_exceptions_overlap": true,
    "dangerous_statement": false,
    "local_testclass_consistency": true,
    "unnecessary_pragma": false,
    "omit_preceding_zeros": false,
    "nrob_consistency": true,
    "smim_consistency": true,
    "omit_parameter_name": false,
    "omit_receiving": false,
    "prefer_is_not": false,
    "prefer_xsdbool": false,
    "sy_modification": false,
    "unused_methods": false,
    "use_bool_expression": true,
    "begin_single_include": false,
    "check_subrc": false,
    "downport": false,
    "forbidden_pseudo_and_pragma": false,
    "forbidden_void_type": false,
    "identical_conditions": true,
    "line_break_multiple_parameters": false,
    "line_break_style": false,
    "names_no_dash": true,
    "parser_missing_space": false,
    "prefer_inline": false,
    "reduce_string_templates": false,
    "unused_types": true,
    "use_line_exists": false,
    "forbidden_identifier": false,
    "try_without_catch": true,
    "unknown_types": false,
    "abapdoc": false,
    "allowed_object_naming": true,
    "allowed_object_types": false,
    "ambiguous_statement": false,
    "begin_end_names": true,
    "chain_mainly_declarations": false,
    "check_abstract": true,
    "check_comments": false,
    "check_ddic": true,
    "check_include": false,
    "check_syntax": true,
    "check_text_elements": false,
    "check_transformation_exists": false,
    "constructor_visibility_public": true,
    "empty_structure": {
      "loop": true,
      "if": false,
      "while": true,
      "case": true,
      "loopAllowIfSubrc": false,
      "when": false,
      "select": false,
      "do": true,
      "try": false,
      "at": true
    },
    "form_tables_obsolete": true,
    "fully_type_constants": false,
    "implement_methods": true,
    "in_statement_indentation": false,
    "keep_single_parameter_on_one_line": false,
    "keyword_case": false,
    "main_file_contents": true,
    "newline_between_methods": false,
    "prefer_returning_to_exporting": false,
    "preferred_compare_operator": false,
    "prefix_is_current_class": false,
    "release_idoc": true,
    "rfc_error_handling": true,
    "selection_screen_naming": false,
    "sicf_consistency": true,
    "space_before_dot": false,
    "sql_escape_host_variables": false,
    "type_form_parameters": true,
    "types_naming": false,
    "unused_variables": false,
    "use_new": false,
    "xml_consistency": true,
    "7bit_ascii": false,
    "avoid_use": {
      "define": false,
      "describeLines": false,
      "testSeams": true,
      "exportToMemory": true,
      "exportToDatabase": false,
      "break": true,
      "defaultKey": false,
      "statics": true
    },
    "class_attribute_names": false,
    "cloud_types": true,
    "colon_missing_space": false,
    "commented_code": false,
    "contains_tab": true,
    "definitions_top": false,
    "description_empty": true,
    "double_space": false,
    "empty_line_in_statement": false,
    "empty_statement": false,
    "exit_or_check": false,
    "exporting": false,
    "functional_writing": false,
    "global_class": true,
    "identical_form_names": true,
    "if_in_if": false,
    "indentation": false,
    "inline_data_old_versions": true,
    "line_length": {
      "length": 160
    },
    "line_only_punc": false,
    "local_class_naming": false,
    "local_variable_names": false,
    "max_one_statement": false,
    "message_exists": false,
    "method_length": false,
    "method_parameter_names": false,
    "mix_returning": false,
    "msag_consistency": false,
    "nesting": {
      "depth": 12
    },
    "no_public_attributes": false,
    "object_naming": {
      "clas": "^Z",
      "intf": "^ZIF\\_",
      "prog": "^Z",
      "fugr": "^Z",
      "tabl": "^Z",
      "ttyp": "^Z",
      "dtel": "^Z",
      "doma": "^Z",
      "msag": "^Z",
      "tran": "^Z",
      "enqu": "^EZ",
      "auth": ".",
      "idoc": "^Z",
      "shlp": "^Z",
      "xslt": "^Z",
      "pinf": "^Z",
      "ssfo": "^Z",
      "ssst": "^Z"
    },
    "obsolete_statement": {
      "refresh": false,
      "compute": true,
      "add": false,
      "typePools": false,
      "load": true,
      "subtract": true,
      "parameter": false,
      "ranges": true,
      "communication": true,
      "pack": true,
      "selectWithoutInto": true,
      "freeMemory": true,
      "exitFromSQL": true,
      "sortByFS": true,
      "callTransformation": true,
      "regex": true,
      "occurences": true,
      "clientSpecified": true,
      "formDefinition": true,
      "formImplementation": true,
      "multiply": true,
      "fieldSymbolStructure": true,
      "move": false,
      "withHeaderLine": true,
      "occurs": false,
      "divide": true,
      "requested": true,
      "setExtended": true
    },
    "parser_error": false,
    "remove_descriptions": false,
    "sequential_blank": false,
    "short_case": {
      "length": 1,
      "allow": []
    },
    "space_before_colon": false,
    "start_at_tab": false,
    "superclass_final": true,
    "tabl_enhancement_category": false,
    "unreachable_code": true,
    "when_others_last": true,
    "whitespace_end": true
  }
}
