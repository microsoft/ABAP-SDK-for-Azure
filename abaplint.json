{
  "global": {
    "files": "/src/**/*.*",
    "skipGeneratedGatewayClasses": true,
    "skipGeneratedPersistentClasses": true,
    "skipGeneratedFunctionGroups": true
  },
  "dependencies": [
    {
      "url": "https://github.com/abaplint/deps",
      "folder": "/deps",
      "files": "/src/**/*.*"
    }
  ],
  "syntax": {
    "version": "v753",
    "errorNamespace": "^(Z|Y)",
    "globalConstants": [],
    "globalMacros": []
  },
  "rules": {
    "forbidden_identifier": false,
    "try_without_catch": true,
    "unknown_types": false,
    "abapdoc": false,
    "allowed_object_naming": true,
    "allowed_object_types": false,
    "ambiguous_statement": false,
    "begin_end_names": true,
    "chain_mainly_declarations": false,
    "check_abstract": true,
    "check_comments": false,
    "check_ddic": true,
    "check_include": false,
    "check_no_handler_pragma": true,
    "check_syntax": false,
    "check_text_elements": false,
    "check_transformation_exists": false,
    "constructor_visibility_public": true,
    "empty_structure": {
      "loop": true,
      "if": false,
      "while": true,
      "case": true,
      "select": false,
      "do": true,
      "at": true
    },
    "form_no_dash": true,
    "form_tables_obsolete": true,
    "fully_type_constants": true,
    "implement_methods": true,
    "in_statement_indentation": false,
    "keep_single_parameter_on_one_line": false,
    "keyword_case": false,
    "local_testclass_location": true,
    "main_file_contents": true,
    "newline_between_methods": false,
    "prefer_returning_to_exporting": false,
    "preferred_compare_operator": false,
    "prefix_is_current_class": false,
    "release_idoc": true,
    "rfc_error_handling": true,
    "selection_screen_naming": false,
    "sicf_consistency": true,
    "space_before_dot": false,
    "sql_escape_host_variables": false,
    "type_begin_single_include": true,
    "type_form_parameters": true,
    "types_naming": false,
    "unused_variables": false,
    "use_new": false,
    "xml_consistency": true,
    "7bit_ascii": true,
    "avoid_use": {
      "define": false,
      "communication": true,
      "break": true,
      "defaultKey": false,
      "statics": true,
      "systemCall": true,
      "endselect": false,
      "execSQL": true,
      "kernelCall": true
    },
    "class_attribute_names": false,
    "cloud_types": true,
    "colon_missing_space": false,
    "commented_code": false,
    "contains_tab": true,
    "definitions_top": false,
    "description_empty": true,
    "double_space": false,
    "empty_line_in_statement": false,
    "empty_statement": true,
    "exit_or_check": false,
    "exporting": true,
    "functional_writing": false,
    "global_class": true,
    "identical_form_names": true,
    "if_in_if": false,
    "indentation": false,
    "inline_data_old_versions": true,
    "line_length": {
      "length": 160
    },
    "line_only_punc": false,
    "local_class_naming": false,
    "local_variable_names": false,
    "max_one_statement": false,
    "message_exists": false,
    "method_length": false,
    "method_parameter_names": false,
    "mix_returning": false,
    "msag_consistency": true,
    "nesting": {
      "depth": 12
    },
    "no_public_attributes": false,
    "object_naming": {
      "clas": "^Z",
      "intf": "^ZIF\\_",
      "prog": "^Z",
      "fugr": "^Z",
      "tabl": "^Z",
      "ttyp": "^Z",
      "dtel": "^Z",
      "doma": "^Z",
      "msag": "^Z",
      "tran": "^Z",
      "enqu": "^EZ",
      "auth": "^Z",
      "idoc": "^Z",
      "xslt": "^Z",
      "pinf": "^Z",
      "ssfo": "^Z",
      "ssst": "^Z"
    },
    "obsolete_statement": {
      "refresh": false,
      "compute": true,
      "add": false,
      "subtract": true,
      "multiply": true,
      "move": false,
      "occurs": true,
      "divide": true,
      "requested": true,
      "setExtended": true
    },
    "parser_error": true,
    "remove_descriptions": false,
    "sequential_blank": false,
    "short_case": {
      "length": 1,
      "allow": []
    },
    "space_before_colon": false,
    "start_at_tab": false,
    "superclass_final": false,
    "tabl_enhancement_category": false,
    "unreachable_code": true,
    "when_others_last": true,
    "whitespace_end": true
  }
}
